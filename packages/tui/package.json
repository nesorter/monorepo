{
  "name": "@nesorter/tui",
  "version": "1.0.9",
  "description": "Terminal UI for @nesorter/lib",
  "repository": "git@github.com:nesorter/monorepo.git",
  "bugs": {
    "url": "https://github.com/nesorter/monorepo/issues"
  },
  "keywords": [
    "streaming",
    "icecast",
    "server",
    "audio",
    "lame",
    "webradio",
    "nesorter"
  ],
  "homepage": "https://github.com/nesorter/monorepo#readme",
  "author": "kugichka <kugi@kugi.club>",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./build/index.js",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node ./build/index.js",
    "dev": "npx nodemon",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testMatch": [
      "**/test/**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageReporters": [
      "text",
      "html"
    ],
    "collectCoverageFrom": [
      "**/src/**/**/*.{ts,tsx,js,jsx}"
    ],
    "coverageDirectory": "/test/.coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@nesorter/lib": "*",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.8",
    "console-gui-tools": "^3.1.1",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  }
}
